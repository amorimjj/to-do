{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["vite/client", "node", "jest"],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
